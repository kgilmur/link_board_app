<div class="row">
 <div class="col-md-6 col-md-offset-3">
   <h1 class='text-center'>Signup</h1>

  <%= render "layouts/flash" %>

   <%= bootstrap_form_for :user do |f| %>
    <%= f.text_field :name, placeholder: "Enter your name" %>
     <%= f.text_field :email, placeholder: "Enter your email", icon: "user" %>
     <%= f.password_field :password, placeholder: "Enter your password", icon: "lock" %>
     <%= f.submit "Signup", class: "btn btn-primary" %>
   <% end %>
 </div>
</div>